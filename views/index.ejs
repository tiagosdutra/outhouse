<!doctype html>
<html>
<head>
    <title>Outhouse</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="jumbotron text-center">
        <h1>Outhouse</h1>
        <img src="img/outhouse.jpg" alt="someBODY ONCE TOLD ME">

        <p>Login or Signup:</p>

        <a href="/login" class="btn btn-default"><span class="fa fa-user"></span><span class="login">Login</span></a>
        <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span><span class="login">Signup</span></a>
        <a href="/feed" class="btn btn-default"><span class="fa fa-user"></span><span >Feed</span></a>
    </div>



    <div id="map">
        <div>
          <h3> My Google Map</h3>
          <script>
            function getUserLocation() {
              if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(initMap);
              }
            }
            function initMap(pos) {
              const options = {
                zoom: 15,
                mapId: 'e952a99f67dafb3e',
                center: { lat: pos.coords.latitude, lng: pos.coords.longitude }
              }
              const map = new google.maps.Map(document.getElementById('map'), options);
              const marker = new google.maps.Marker({
                position: { lat: pos.coords.latitude, lng: pos.coords.longitude },
                map: map,
                icon: { url: "http://maps.google.com/mapfiles/ms/icons/green-dot.png" }
              });
              fetch('locations?' + new URLSearchParams({
                lat: pos.coords.latitude,
                lng: pos.coords.longitude,
                distance: 1
              }), {
                method: 'get',
                headers: { 'Content-Type': 'application/json' },
              })
                .then(response => {
                  console.log(response);
                  if (response.ok) {
                    return response.json();
                  }
                })
                .then(data => {
                  console.log(data);
                  for (let j = 0; j < data.locations.length; j++) {
                    const name = data.locations[j].name;
                    const address = data.locations[j].address;
                    const lat = data.locations[j].lat;
                    const lng = data.locations[j].lng;
                    const details = data.locations[j].details;
                    const thumbUp = data.locations[j].thumbUp;
                    const thumbDown= data.locations[j].thumbDown;
                    const infowindow = new google.maps.InfoWindow();
                    const marker = new google.maps.Marker({
                      position: new google.maps.LatLng(lat, lng),
                      map: map,
                      icon: {
                        // add image url instead of binary
                        scaledSize: new window.google.maps.Size(50, 50)
                      },
                      mapTypeId: google.maps.MapTypeId.ROADMAP,
                      draggable: false,
                      title: "pin",
                      content: `<h1>${name}</h1>`
                    });
                    google.maps.event.addListener(marker, 'click', (function () {
                      return function () {
                        infowindow.setContent(
                          `<p>${name}</p> <p>${address}</p> <p>${details}</p> 
                          <span>${thumbUp}</span>                      
                          <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                          <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
                          <a href="/post/${data.locations[j].id}"><p>Comments</p></a>`
                        );
                        infowindow.open(map, marker);
                      }
                    })(marker));
                  }
                })
            }
          </script>
        </div>
      </div>
</div>

<script src="main.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= API_KEY %>&callback=getUserLocation&v=weekly"
      defer></script>
</body>
</html>
