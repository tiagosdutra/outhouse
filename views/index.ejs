        </ul>
      </div>
    </div>
  </nav>


  <h1 class="my-3 display-2 fw-normal">Outhouses Near You</h1>
  <p class="display-6">The green marker is your current location, the red markers are nearby registered outhouses, please click on them for more info.</p>

    <div id="map" class="my-2">
      <div>
        <h3> My Google Map</h3>
        <script>
          function getUserLocation() {
            if (navigator.geolocation) {
              navigator.geolocation.getCurrentPosition(initMap);
            }
          }
          function initMap(pos) {
            const options = {
              zoom: 15,
              mapId: 'e952a99f67dafb3e',
              center: { lat: pos.coords.latitude, lng: pos.coords.longitude }
            }
            const map = new google.maps.Map(document.getElementById('map'), options);
            const marker = new google.maps.Marker({
              position: { lat: pos.coords.latitude, lng: pos.coords.longitude },
              map: map,
              icon: { url: "http://maps.google.com/mapfiles/ms/icons/green-dot.png" }
            });
            fetch('locations?' + new URLSearchParams({
              lat: pos.coords.latitude,
              lng: pos.coords.longitude,
              distance: 1
            }), {
              method: 'get',
              headers: { 'Content-Type': 'application/json' },
            })
              .then(response => {
                console.log(response);
                if (response.ok) {
                  return response.json();
                }
              })
              .then(data => {
                console.log(data);
                for (let j = 0; j < data.locations.length; j++) {
                  const name = data.locations[j].name;
                  const address = data.locations[j].address;
                  const lat = data.locations[j].lat;
                  const lng = data.locations[j].lng;
                  const details = data.locations[j].details;
                  const thumbUp = data.locations[j].thumbUp;
                  const thumbDown = data.locations[j].thumbDown;
                  const infowindow = new google.maps.InfoWindow();
                  const marker = new google.maps.Marker({
                    position: new google.maps.LatLng(lat, lng),
                    map: map,
                    icon: {
                      // add image url instead of binary
                      scaledSize: new window.google.maps.Size(50, 50)
                    },
                    mapTypeId: google.maps.MapTypeId.ROADMAP,
                    draggable: false,
                    title: "pin",
                    content: `<h1>${name}</h1>`
                  });
                  google.maps.event.addListener(marker, 'click', (function () {
                    return function () {
                      infowindow.setContent(
                        `<p>${name}</p>
                         <p>${address}</p> 
                         <p>${details}</p> 
                          <button class="btn"><a href="/page/${data.locations[j].id}"><p>Comments</p></a></button>`
                      );
                      infowindow.open(map, marker);
                    }
                  })(marker));
                }
              })
          }
        </script>
      </div>
    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="main.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= API_KEY %>&callback=getUserLocation&v=weekly"
      defer></script>
</body>
</html>
