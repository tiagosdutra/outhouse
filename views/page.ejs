<!doctype html>
<html>
<head>
    <title>Outhouse</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="../style.css">
</head>
<body>
  <div class="container">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Outhouse</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbar">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0 text-end">
            <li class="nav-item">
              <a href="/login" class="nav-link">Login</a>
          </li>
          <li class="nav-item">
              <a href="/Signup " class="nav-link">Signup</a>
          </li>
          <li class="nav-item">
            <a href="/profile" class="nav-link">Your Outhouses</a>
        </li>
          <li class="nav-item">
              <a href="/feed" class="nav-link">All Outhouses</a>
          </li>
          <li class="nav-item">
              <a href="/logout" class="nav-link">Logout</a>
          </li>
          </ul>
        </div>
      </div>
    </nav>
    <h1><%= locations[0].name %></h1>
    <div id="map">
      <div>
        <h3> My Google Map</h3>
        <script>
          function initMap() {
            const lat = <%=locations[0].lat %>;
            const lng = <%=locations[0].lng %>;
            console.log(lat, lng)
            const myLatLng = { lat:lat, lng:lng};
            const map = new google.maps.Map(document.getElementById("map"), {
              zoom: 15,
              mapId: 'e952a99f67dafb3e',
              center: myLatLng,
            });
            new google.maps.Marker({
              position: myLatLng,
              map:map,
              title: "Hello World!",
            });
          }
          window.initMap = initMap;
        </script>
      </div>
    </div>
     
    <div class="row">
      <div class="col-sm-6">
        <h3>Posts</h3>
        <ul class="locations">
        <% for(let i=0; i<locations.length; i++) {%>
          <li class="location">
            <a href="/post/<%= locations[i]._id %>"><span><%= locations[i].name %></span></a>
            <span><%= locations[i].address %></span>
            <span><%= locations[i].details %></span>
            <span><%= locations[i].thumbUp %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
        <% } %>
        </ul>
        <div>
          <h4>Leave A Note</h4>
          <form action="/page/<%= locations[0]._id%>/comments" method="post">
            <textarea id="comments" name="comment" rows="4" cols="50"></textarea>
            <button type="submit">submit</button>
          </form>
        </div>
  
        <ul class="messages">
          <% for(let i=0; i<comments.length; i++) {%>
            <li class="message">
              <h4>
                <%= comments[i].comment %>
              </h4>
            </li>
            <% } %>
        </ul>
        
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="/main.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= API_KEY %>&callback=initMap&v=weekly"
      defer></script>

</body>
</html>
