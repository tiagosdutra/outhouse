      <!-- </div> -->
      <div class="col-sm-6">
        <h3>Outhouses</h3>
        <ul class="locations">
          <% for(var i=0; i<locations.length; i++) {%>
            <li class="location">
              <span><%= locations[i].name %></span>
              <span><%= locations[i].address %></span>
              <span><%= locations[i].details %></span>
              <span><%= locations[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-ban" aria-hidden="true"></i></span>
            </li>
            <% } %>
        </ul>

        <h2>Add an Outhouse</h2>
        <% if (user.local.email) { %>
          <form action="/locations" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="address" name="address">
            <input type="text" placeholder="details" name="details">
            <button type="submit">Submit</button>
          </form>
      </div>
      <% } %>

    </div>

    <div id="map">
      <div>
        <h3> My Google Map</h3>
        <script>
          function getUserLocation() {
            if (navigator.geolocation) {
              navigator.geolocation.getCurrentPosition(initMap);
            }
          }
          function initMap(pos) {
            const options = {
              zoom: 15,
              mapId: 'e952a99f67dafb3e',
              center: { lat: pos.coords.latitude, lng: pos.coords.longitude }
            }
            const map = new google.maps.Map(document.getElementById('map'), options);
            const marker = new google.maps.Marker({
              position: { lat: pos.coords.latitude, lng: pos.coords.longitude },
              map: map,
              icon: { url: "http://maps.google.com/mapfiles/ms/icons/green-dot.png" }
            });
            fetch('locations?' + new URLSearchParams({
              lat: pos.coords.latitude,
              lng: pos.coords.longitude,
              distance: 1
            }), {
              method: 'get',
              headers: { 'Content-Type': 'application/json' },
            })
              .then(response => {
                console.log(response);
                if (response.ok) {
                  return response.json();
                }
              })
              .then(data => {
                console.log(data);
                for (let j = 0; j < data.locations.length; j++) {
                  const name = data.locations[j].name;
                  const address = data.locations[j].address;
                  const lat = data.locations[j].lat;
                  const lng = data.locations[j].lng;
                  const details = data.locations[j].details;
                  const infowindow = new google.maps.InfoWindow();
                  const marker = new google.maps.Marker({
                    position: new google.maps.LatLng(lat, lng),
                    map: map,
                    icon: {
                      // add image url instead of binary
                      scaledSize: new window.google.maps.Size(50, 50)
                    },
                    mapTypeId: google.maps.MapTypeId.ROADMAP,
                    draggable: false,
                    title: "pin",
                    content: `<h1>${name}</h1>`
                  });
                  google.maps.event.addListener(marker, 'click', (function () {
                    return function () {
                      infowindow.setContent(
                        `	<p>${name}</p> <p>${address}</p> <p> ${details}</p>`
                      );
                      infowindow.open(map, marker);
                    }
                  })(marker));
                }
              })
          }
        </script>
      </div>
    </div>

    <script src="main.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= API_KEY %>&callback=getUserLocation&v=weekly"
      defer></script>
</body>

</html>